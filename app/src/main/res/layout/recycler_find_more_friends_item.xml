<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_message_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_fmf_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_nailong"
            android:background="@color/bg_color" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_fmf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奶龙"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_message_icon"
        app:layout_constraintTop_toTopOf="@+id/cv_message_icon" />

    <TextView
        android:id="@+id/tv_fmf_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近一个月活跃"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_fmf_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_fmf_title" />

    <TextView
        android:id="@+id/tv_fmf_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        android:textSize="14dp"
        android:textColor="#ED2E49"
        android:layout_marginRight="55dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_fmf"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cancel"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>