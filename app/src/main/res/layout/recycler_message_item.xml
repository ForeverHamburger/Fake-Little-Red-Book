<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_message_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/bg_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/comments_and_at"
            android:background="@color/bg_color" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统消息"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_message_icon"
        app:layout_constraintTop_toTopOf="@+id/cv_message_icon" />

    <TextView
        android:id="@+id/tv_message_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8折优惠券要过期咯"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_message_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_title" />

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期三"
        android:textSize="12dp"
        android:textColor="@color/grey"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>