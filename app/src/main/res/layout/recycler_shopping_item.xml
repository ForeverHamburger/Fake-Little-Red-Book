<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_message_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_shopping_item_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/bg_color"
                android:scaleType="fitXY"
                android:src="@drawable/nailong_long"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_shopping_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="☀☀奶龙大王入侵地球☀☀"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/iv_shopping_item_icon"
                app:layout_constraintTop_toBottomOf="@+id/iv_shopping_item_icon" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="¥"
                android:textColor="@color/black"
                android:gravity="bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_shopping_item_name">
            </TextView>

            <TextView
                android:id="@+id/tv_shopping_discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:text="499"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv1"
                app:layout_constraintStart_toEndOf="@+id/tv1"
                app:layout_constraintTop_toTopOf="@+id/tv1" />


            <TextView
                android:id="@+id/tv_shopping_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxEms="5"
                android:maxLines="1"
                android:text="¥899"
                android:layout_marginBottom="3dp"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_shopping_discounted_price"
                app:layout_constraintStart_toEndOf="@+id/tv_shopping_discounted_price" />

            <TextView
                android:id="@+id/tv_sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000+人已买"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                app:layout_constraintBottom_toBottomOf="@+id/tv_shopping_price"
                app:layout_constraintStart_toEndOf="@+id/tv_shopping_price" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@+id/tv_shopping_discounted_price"
                app:layout_constraintTop_toBottomOf="@+id/tv_shopping_price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>