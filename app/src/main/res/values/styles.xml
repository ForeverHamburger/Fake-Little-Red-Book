<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tabSelectedTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--评论Dialog-->
    <style name="dialogCommentNumText">
        <item name="android:textSize">@dimen/dialog_comment_num_size</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="dialogEditCommentText">
        <item name="android:textSize">@dimen/dialog_comment_num_size</item>
        <item name="android:textColor">@color/color_white_50</item>
        <item name="android:textColorHint">@color/color_white_50</item>
    </style>

    <style name="dialogSendCommentText">
        <item name="android:textSize">@dimen/dialog_send_comment_size</item>
        <item name="android:textColor">@color/color_black_50</item>
    </style>
    <!--评论-->
    <style name="commentUserNameText">
        <item name="android:textSize">@dimen/comment_user_name_size</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="commentContentText">
        <item name="android:textSize">@dimen/comment_content_size</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="commentLikeText">
        <item name="android:textSize">@dimen/comment_likes_size</item>
        <item name="android:textColor">@color/color_white_100</item>
    </style>

    <style name="commentTimeText">
        <item name="android:textSize">@dimen/comment_likes_size</item>
        <item name="android:textColor">@color/color_white_49</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/anim_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_from_bottom</item>
    </style>

    <!-- 中间弹出框 -->
    <style name="dialog_center" parent="Theme.AppCompat.Dialog.Alert">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景 -->
        <!-- 窗口背景 @color/touming的值为：#00000000 ， style中不能直接引用16进制，感谢评论区的老铁提醒-->

        <item name="android:windowBackground">@color/touming</item>

        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>